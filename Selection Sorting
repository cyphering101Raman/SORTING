#include<stdio.h>

void swap(int *p, int *q)
{
    int temp = *p;
    *p = *q;
    *q = temp;
}
int main()
{
    int n = 6;
    int array[6] = {12,45,23,51,19,8};

    printf("Entered Array: ");
    for(int k = 0; k<n; k++)
    {
        printf("%d   ", array[k]);
    }
    printf("\n\n");

    int mini;

    for(int i = 0; i<n-1; i++)
    {
        int mini = array[i];
        for(int j = i+1; j<n; j++)
        {
            if(array[i]>array[j])
            {
                swap(&array[i], &array[j]);
            }

        }
    }

    printf("Updated Array: ");
    for(int k = 0; k<n; k++)
    {
        printf("%d   ", array[k]);
    }
    printf("\n");
}
